@model IEnumerable<DataAccess.Entity.Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-grid">
    <div class="agile-grids">
        <!-- tables -->

        <div class="table-heading">
            <h2>Site contact table</h2>
        </div>
        <div class="agile-tables">
            <div class="w3l-table-info">
                <table id="table">
                    <thead>
                        <tr>
                            <th>Telephone</th>
                            <th>E-Mail</th>
                            <th>Address</th>
                            <th>Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Telephone</td>
                                <td>@item.Email</td>
                                <td>@item.Address</td>
                                <td><a href="/Admin/Contact/ContactUpdate/@item.ID/" class="btn btn-success">Update</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- //tables -->
    </div>
</div>

