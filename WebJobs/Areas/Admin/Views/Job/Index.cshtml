@model IEnumerable<DataAccess.Entity.Job>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-grid">
    <div class="agile-grids">
        <!-- tables -->

        <div class="table-heading">
            <h2>Jobs posting table</h2>
        </div>
        <div class="agile-tables">
            <div class="w3l-table-info">
                <table id="table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Company</th>
                            <th>Date</th>
                            <th>Last Date</th>
                            <th>Salary</th>
                            <th>Category</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Company</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td>@(((DateTime)item.LastDate).ToString("dd-MMM-yyyy"))</td>
                                <td>@item.Salary</td>
                                <td>@item.Category.Name</td>
                                <td><a href="/Admin/Job/JobUpdate/@item.ID/" class="btn btn-success">Update</a></td>
                                <td><a href="/Admin/Job/JobDelete/@item.ID/" style="background:#EB3E28;" class="btn btn-success">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- //tables -->
    </div>
</div>

