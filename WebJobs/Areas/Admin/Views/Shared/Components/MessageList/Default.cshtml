@model IEnumerable<DataAccess.Entity.Message>

<div class="header-right-left">
    <!--notifications of menu start -->
    <ul class="nofitications-dropdown">
        <li class="dropdown head-dpdn">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-envelope"></i><span class="badge">@ViewBag.message</span></a>
            <ul class="dropdown-menu anti-dropdown-menu w3l-msg">
                <li>
                    <div class="notification_header">
                        <h3>You have @ViewBag.message new messages</h3>
                    </div>
                </li>
                @foreach (var item in Model)
                {
                    <li>
                        <a href="/Admin/Message/MessageDetails/@item.ID/">
                            <div class="notification_desc">
                                <p>@item.Subject</p>
                                <p><span>@item.Name</span></p>
                            </div>
                            <div class="clearfix"></div>
                        </a>
                    </li>
                }
                <li>
                    <div class="notification_bottom">
                        <a href="/Admin/Message/Index/">See all messages</a>
                    </div>
                </li>
            </ul>
        </li>
        <div class="clearfix"> </div>
    </ul>
</div>
